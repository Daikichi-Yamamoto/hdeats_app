<% provide(:title, @user.name) %>
<div class="row">
  <div class="col-md-8">
    <% if @user.microposts.any? %>
      <h3>
      今までの食事記録(<%= @user.microposts.count %>)
      </h3>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= will_paginate @microposts, previous_label: '&lt 前へ', next_label: '次へ &gt' %>
    <% end %>
  </div>
</div>