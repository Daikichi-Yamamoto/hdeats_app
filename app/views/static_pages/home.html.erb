<% if logged_in? %>
  <div class="row">
    <aside class="col-md-4">
      <section class="user_info">
        <%= render 'shared/user_info' %>
      </section>
      <section class="micropost_form">
        <%= render 'shared/micropost_form' %>
      </section>
    </aside>
    <div class="col-md-8">
    <h3>
    今までの食事記録
    </h3>
    <%= render 'shared/feed' %>
    </div>
  </div>
<% else %>
  <div class="center jumbotron">
    <h1>我慢する透析より、楽しむ透析。</h1>

    <h2>
      HDeatsに食事を記録して幸福度の高い食生活へ
    </h2>

    <%= link_to "無料会員登録", signup_path, class: "btn btn-lg btn-primary" %>
  </div>

  <%= image_tag "hd.jpg", width: "200", class: "hd" %>

<% end %>