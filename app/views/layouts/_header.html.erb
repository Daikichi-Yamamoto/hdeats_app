<header class="navbar navbar-light bg-light navbar-expand">
  <div class="container d-flex justify-content-between align-items-center">
    <!-- ロゴ -->
    <a href="/" class="fs-1 fw-bold navbar-brand">HDeats</a>

    <!-- ナビゲーションメニュー -->
    <nav>
      <ul class="nav d-flex align-items-center flex-nowrap">
        <li class="nav-item">
          <a href="/" class="fs-3 nav-link  fw-bold text-reset">ホーム</a>
        </li>
        <% if logged_in? %>
          <li class="nav-item">
            <a href="<%= users_path %>" class="fs-3 nav-link text-reset fw-bold">みんなの食事</a>
          </li>
          <li class="nav-item dropdown">
            <a href="#" class="fs-3 nav-link fw-bold text-reset dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
