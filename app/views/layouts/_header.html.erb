<header class="navbar navbar-light bg-light navbar-expand">
  <div class="container d-flex justify-content-between align-items-center">
    <!-- ロゴ -->
    <a href="/" class="fs-1 navbar-brand">HDeats</a>

    <!-- ナビゲーションメニュー -->
    <nav>
      <ul class="nav d-flex align-items-center flex-nowrap">
        <li class="nav-item">
          <a href="/" class="nav-link">ホーム</a>
        </li>
        <% if logged_in? %>
          <li class="nav-item">
            <%= link_to "みんなの食事", users_path, class: "nav-link" %>
          </li>
          <li class="nav-item dropdown">
            <a href="#" class="nav-link dropdown-toggle" data-bs-toggle="dropdown" aria-expanded="false">
              アカウント
            </a>
            <ul class="dropdown-menu">
              <li class="dropdown-item"><%= link_to "プロフィール", current_user %></li>
              <li class="dropdown-item"><%= link_to "設定", edit_user_path(current_user) %></li>
              <li><hr class="dropdown-divider"></li>
              <li class="dropdown-item"><%= link_to "ログアウト", logout_path, data: { "turbo-method": :delete } %></li>
            </ul>
          </li>
        <% else %>
          <li class="nav-item">
            <%= link_to "ログイン", login_path, class: "nav-link" %>
          </li>
        <% end %>
      </ul>
    </nav>
  </div>
